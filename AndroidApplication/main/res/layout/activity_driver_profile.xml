<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layoutHead"
            android:background="#5CC09F"
            android:layout_width="match_parent"
            android:layout_height="270dp">

            <ImageView
                android:id="@+id/image_view"
                android:background="@drawable/iconsuser"
                android:layout_centerInParent="true"
                android:layout_width="90dp"
                android:layout_height="90dp"/>


            <ProgressBar
                android:visibility="invisible"
                android:id="@+id/progressbar_pic"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_below="@id/layoutHead"
            android:layout_width="360dp"
            android:layout_height="match_parent">

            <TextView
                android:textAlignment="center"
                android:layout_marginTop="260dp"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_centerHorizontal="true"
                android:enabled="true"
                android:id="@+id/Firstname"
                android:hint="Firstanme:"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/Firstname"
                android:enabled="true"
                android:id="@+id/userFirstname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_centerHorizontal="true"
                android:enabled="true"
                android:id="@+id/Lastname"
                android:hint="Lastname:"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/Lastname"
                android:enabled="true"
                android:id="@+id/userLasttname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_centerHorizontal="true"
                android:enabled="true"
                android:id="@+id/Email"
                android:hint="Email:"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/Email"
                android:enabled="true"
                android:id="@+id/userEmail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_centerHorizontal="true"
                android:enabled="true"
                android:id="@+id/Password"
                android:hint="Password:"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/userEmail"
                android:enabled="true"
                android:id="@+id/userPassword"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_centerHorizontal="true"
                android:enabled="true"
                android:id="@+id/SerialNum"
                android:hint="SerialNum:"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/SerialNum"
                android:enabled="true"
                android:id="@+id/carSerialNum"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_centerHorizontal="true"
                android:enabled="true"
                android:id="@+id/Model"
                android:hint="ModelName:"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/Model"
                android:enabled="true"
                android:id="@+id/Modelname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/button_save"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"
                android:background="?colorPrimary"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:text="Save Changes"
                android:layout_width="140dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
    </RelativeLayout>

</LinearLayout>